.form-wrapper
  = simple_form_for @post, url: posts_path , html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.input :image
    .form-group.text-center
      = f.input :caption
    .text-center.edit-links=
      = link_to "Delete Post", posts_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }
      |
      = link_to "Cancel", posts_path
      |
      = link_to "Edit Post", edit_posts_path(@post)